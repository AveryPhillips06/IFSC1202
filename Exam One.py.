# Children's Game
print("Hello! What is you Name?:")
name = input("(Name):")
print("Well:", (name), "Lets play a game:")
print("I am thinking of a number between 1 & 20:")
from random import randint
randomNum= randint(1,20)
Win=False
for i in range(1,4): ##3 Tries
    Guess = input("Guess the Number(from 1 to 20):")
if Guess == randomNum:
        Win=True
        break
elif Guess>randomNum:
    print("Your guess is too high...")
elif Guess<randomNum:
    print("Your guess is too low...")
##Winner
if Win==False :
    print("\nComputer Win!!!")
else:
    print("\nCorrect guess...You Win!!!")